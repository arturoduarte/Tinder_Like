<h1 class="text-center">Listado de Matches</h1>

<div>
	
</div>

<% @matches.each do |variable| %>
<div class="offset-md-4 card bg-secondary text-center mb-3" style="width: 18rem;">
	<p>
			<h4><%= variable.name  %></h4>
		<h4><%= variable.email  %></h4>
		
		<br>
		<div>
			<%= image_tag(variable.picture, :width => 200, :height => 200) if variable.picture? %>
		</div>
		<br>
		<%= variable.bio  %>
		<div>
			<%= link_to  "Enviar Mensaje", chat_path(user_two: variable.id), class:'btn btn-success'  %>
		</div>
		
	</p>
</div>
<br>
<% end %>